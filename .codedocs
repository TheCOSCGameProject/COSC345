# CodeDocs Configuration

# Only include source directories
INPUT = src/ lib/ helper/ tests/ README.md ReadMe/

# Exclude unnecessary directories from the documentation process
EXCLUDE = \
    Valeris/ \
    planning/ \
    reasources/ \
    dist/ \
    logs/ \
    .git/ 

# Exclude specific subdirectories or patterns within excluded directories
EXCLUDE_PATTERNS = \
    */x64/Release/* \
    */.git/* 

# Enable recursive search
RECURSIVE = YES

# Project details
PROJECT_NAME = "TheCOSCGameProject"
PROJECT_NUMBER = "1.0"

# Doxygen options
EXTRACT_ALL = YES
GENERATE_LATEX = NO
GENERATE_HTML = YES

# USE_MDFILE_AS_MAINPAGE 
USE_MDFILE_AS_MAINPAGE = README.md
INPUT += README.md
EXTRACT_ALL = YES
GENERATE_LATEX = NO
GENERATE_HTML = YES
MARKDOWN_SUPPORT = YES
EXTERNAL_GROUPS = YES
EXTERNAL_PAGES = YES
